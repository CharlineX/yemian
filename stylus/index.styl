*
	margin 0
	padding 0
	box-sizing border-box
	line-height 1
	font-family Arial,Verdana
	-webkit-font-smoothing: antialiased
li,ul
	list-style none
i
	font-style normal
	font-size 12px
// @keyframes rotate
// 	from
// 		transform rotate(0)
// 	to
// 		transform rotate(180deg)
.top
	height 30px
	background rgb(241 241 241)
	.main
		margin-left auto
		margin-right auto
		width 1210px
		height 100%
		color rgb(102 102 102)
		li,span,i
			font-size 12px
		a:hover,.red
			color rgb(200 22 35)
		.list
			position relative
			float left
			line-height 30px
			height 100%
			padding 0 10px
			border-right 1px solid transparent
			border-right 1px solid transparent
			// span
			// 	display inline-block
				.text
					position relative
					height 31px
					padding-right 8px
					padding-left 8px
					line-height 30px
			&:hover
				background-color white
				border-right-color rgb(221 221 221)
				border-left-color rgb(221 221 221)
				.fixedBox
					position absolute
					top 30px
					left 12px
					width 312px
					height 200px
					border 1px solid rgb(221 221 221)
				// span
				// 	animation rotate .5s forwards
		.right
			float right
			li
				line-height 30px
				float left
			.normal
				padding 0 8px
			.separator
				font-size 14px
				color rgb(221 221 221)
		